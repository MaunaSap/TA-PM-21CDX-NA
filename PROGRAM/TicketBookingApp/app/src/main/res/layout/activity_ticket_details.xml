<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:padding="16dp"
    android:background="@drawable/menyelam4">

    <ImageView

        android:id="@+id/imageTicket"
        android:layout_width="230dp"
        android:layout_height="220dp"
        android:src="@drawable/menyelam5"
        android:layout_gravity="center"
        android:contentDescription="Foto Menyelam" />

    <TextView
        android:id="@+id/tvTicketDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pesanan Anda!"
        android:textSize="20sp"
        android:gravity="center" />

    <Button
        android:id="@+id/btnCancelTicket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Batalkan Pesanan"
        android:gravity="center" />

</LinearLayout>
